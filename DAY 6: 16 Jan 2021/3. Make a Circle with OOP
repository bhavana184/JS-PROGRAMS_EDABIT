class Circle {
	// put your code here
	constructor(radius) {
    this.radius=radius
  }
  getArea(){return Math.PI*this.radius*this.radius}
  getPerimeter(){return (2*Math.PI *this.radius)}
}


// unquote and use run to test these cases:
let q = new Circle(4.44);
console.log(q.getArea());
console.log(q.getPerimeter());


