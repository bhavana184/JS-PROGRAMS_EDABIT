const GUEST_LIST = {

  Randy: "Germany",

  Karla: "France",

  Wendy: "Japan",

  Norman: "England",

  Sam: "Argentina"

}

function greeting(name) {

    for(var i in GUEST_LIST){

      if(i==name){

        return "Hi! I'm "+ name+", and I'm from "+GUEST_LIST[name]+"."  

      }

    }

  return "Hi! I'm a guest." 

  //return GUEST_LIST[name]

}
/*
    Test Passed: Value == "Hi! I'm Randy, and I'm from Germany."
    Test Passed: Value == "Hi! I'm Sam, and I'm from Argentina."
    Test Passed: Value == "Hi! I'm a guest."
    Test Passed: Value == "Hi! I'm a guest."
    Test Passed: Value == "Hi! I'm Wendy, and I'm from Japan."
*/
