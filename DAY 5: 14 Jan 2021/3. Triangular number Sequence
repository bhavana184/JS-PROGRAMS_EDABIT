//https://www.mathsisfun.com/algebra/triangular-numbers.html
function triangle(n) {
	return Math.floor((n*(n+1))/2);
}
/*
Test Passed: Value == 1
Test Passed: Value == 3
Test Passed: Value == 6
Test Passed: Value == 36
Test Passed: Value == 2318781
*/
